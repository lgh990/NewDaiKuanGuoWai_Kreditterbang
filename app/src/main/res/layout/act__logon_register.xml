<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all"
    android:orientation="vertical"
    tools:context=".ui.act.Act_LogonRegister">

    <ImageView
        android:id="@+id/back_next"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/gocash_land_icon_return" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:src="@mipmap/yimiaofenqi1111" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Kredit Terbang"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="50dp"
        android:text="@string/login_register"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/et_login_bg"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="+62"
            android:textColor="@color/all"
            android:textSize="@dimen/fond_16sp" />

        <EditText
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Masukan nomor telepon Anda"
            android:inputType="number"
            android:maxLength="13"
            android:textSize="@dimen/dip_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/et_login_bg"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="21dp"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/gocash_pinjam_land_icon_vc"
            android:tint="@color/all" />

        <EditText
            android:id="@+id/user_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Masukan kode verifikasi"
            android:inputType="number"
            android:maxLength="6"
            android:textSize="@dimen/dip_14" />

        <TextView
            android:id="@+id/send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="Dapatkan Kode"
            android:textColor="@color/all"
            android:textSize="@dimen/dip_12" />
    </LinearLayout>

    <Button
        android:id="@+id/login_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="52dp"
        android:background="@drawable/button_unsure"
        android:text="OK"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/choose_serve"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="3dp"
            android:src="@mipmap/gocash_land_choice_ed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="saya telah membaca dan setuju"
            android:textColor="@color/white"
            android:textSize="@dimen/dip_12" />

        <TextView
            android:id="@+id/service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《Kebijakan Privasi》"
            android:textColor="@color/white"
            android:textSize="@dimen/dip_12" />
    </LinearLayout>
</LinearLayout>